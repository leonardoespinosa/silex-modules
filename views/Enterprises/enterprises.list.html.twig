{% extends 'layout.html.twig' %}

{% block title 'Empresas' %}

{% block body %}

<div class="container">
	<div class="row">

    <div class="col-md-12">
      <legend>Lista de Empresas</legend>

      <div class="table-responsive">

        <table id="mytable" class="table table-bordred table-striped">

          <thead>
            <th>Id</th>
            <th>Nit</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Sitio Web</th>

            <th>Editar</th>
            <th>Borrar</th>
          </thead>

          <tbody>

          {% for e in enterprises %}
            <tr>
              <td>{{ e.id }}</td>
              <td>{{ e.nit }}</td>
              <td>{{ e.nombre }}</td>
              <td>{{ e.direccion }}</td>
              <td>{{ e.sitioWeb }}</td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Editar">
                  <button class="btn btn-primary btn-xs" data-title="Editar" >
                    <i class="glyphicon glyphicon-pencil"></i>
                  </button>
                </p>
              </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Borrar">
                  <button class="btn btn-danger btn-xs" data-title="Borrar">
                    <i class="glyphicon glyphicon-trash"></i>
                  </button>
                </p>
              </td>
            </tr>
          {% endfor %}
          </tbody>

        </table>

      </div>
    </div>
  </div>
</div>

{% endblock %}